#include<iostream>
#include <cmath>
using namespace std;
 
double PowerA3(double a, double b){
     b = pow(a, 3);
     return b;
}
 
int Sign(double x){
     if (x<1) return -1;
     if (x == 0) return 0;
     else return 1;
}

double RingS(double R1, double R2){
    double res ; 
    if (R2<0 or R1 <0){
        cout<<"Радиусы могут быть отрицательными?"<<endl;
    } else if (R2>=R1){
        cout<<"Нужно ввести такие числа чтобы R1 > R2!"<<endl;   
    } else{
        cout<<"Площадь кольца, заключенного между двумя этими окружностями равна ";
        res = M_PI*(pow(R1, 2)-pow(R2, 2));
        return res;
       
    }
     return 0;
}

int Quarter(double x, double y){
    int num;
    if (x>0 and y > 0 ){
        cout<<"Номер четверти ";
        return 1;
    } else if (x<0 and y > 0 ){
        cout<<"Номер четверти ";
        return 2;
    } else if (x<0 and y < 0 ){
        cout<<"Номер четверти ";
        return 3;  
    } else {
        cout<<"Номер четверти ";
        return 4;    
    }
}
 
double Fact2(int N){
    int z, p=1;
    z = N;
    for (int i =0; i < z; i+=2){
        p = p*N;
        N-=2;
    }
    cout<<"Двойной факториал этого числа равен ";
    return p;
   
}

