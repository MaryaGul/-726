#include <iostream>
using namespace std;
int main()
{
    const double p = 3.1415926535;
    float a, r;
    cout<<"Enter an angle value between 0 and 360 in degrees!"<<endl;
    cin>>a;
    r =p/180*a;
    if (a > 0 and a < 360){
       cout<<"This angle in radians R = "<<r<<endl;
    } else {
        cout<<"The angle you entered is not within the specified limits (from 0 to 360)!"<<endl;
    }       
    return 0;
}
