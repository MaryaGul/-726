        cout<<"The sides of the triangle must be positive!"<<endl;
    } else if ((a6+b6<c6) or (a6+c6<b6) or (b6+c6<a6)  ) {
        cout<<"There is no triangle with such sides"<<endl;
    } else if ( pow(c6, 2)+pow(a6, 2) == pow(b6, 2) or  pow(b6, 2)+pow(a6, 2) == pow(c6, 2) or  pow(c6, 2)+pow(b6, 2) == pow(a6, 2) ){
        cout<<"The statement 'A triangle with sides a, b, c is rectangular' is true"<<endl;
